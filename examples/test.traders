
let bs: list = [-20, 0, 20, ];
foreach b in bs{
    let a: number =0;
    in case b<0{
        repeat when b<0{
            a = a - b;
            b = b + 1;
        }
    }
    in other case b>0{
        repeat when b>0{
            a = a + 2*b;
            b = b - 1;
        }
    }
    otherwise{
        a=-1000;
    }
    talk a;
}
